<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
  <!-- Mapping/Serialization layers can be chatty with chaining -->
  <suppress files=".*/adapter-in-.*" checks="RegexpSinglelineJava"/>
  <suppress files=".*/adapter-out-.*" checks="RegexpSinglelineJava"/>
  <suppress files=".*Mapper\.java" checks="RegexpSinglelineJava"/>

  <!-- Test files: Allow star imports for test readability -->
  <suppress files=".*Test\.java" checks="AvoidStarImport"/>
  <suppress files=".*Tests\.java" checks="AvoidStarImport"/>
  <suppress files=".*IT\.java" checks="AvoidStarImport"/>
  <suppress files=".*/test/.*" checks="AvoidStarImport"/>

  <!-- Test files: Allow unused imports (may be used in assertions) -->
  <suppress files=".*Test\.java" checks="UnusedImports"/>
  <suppress files=".*Tests\.java" checks="UnusedImports"/>

  <!-- Test files: Allow missing newline at end of file -->
  <suppress files=".*Test\.java" checks="NewlineAtEndOfFile"/>
  <suppress files=".*Tests\.java" checks="NewlineAtEndOfFile"/>

  <!-- ArchUnit tests: Allow star imports for fluent DSL -->
  <suppress files=".*ArchTest\.java" checks="AvoidStarImport"/>

  <!-- Test files: Allow longer lines for readability (regex patterns, assertions) -->
  <suppress files=".*Test\.java" checks="LineLength"/>
  <suppress files=".*Tests\.java" checks="LineLength"/>
  <suppress files=".*IT\.java" checks="LineLength"/>
  <suppress files=".*ArchTest\.java" checks="LineLength"/>
</suppressions>
